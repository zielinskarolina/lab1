        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="label">
            <BeginStoryboard x:Name="Storyboard1_BeginStoryboard" Storyboard="{StaticResource Storyboard1}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="label1">
            <BeginStoryboard x:Name="button_2_BeginStoryboard" Storyboard="{StaticResource button_2}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="label2">
            <BeginStoryboard x:Name="button3_BeginStoryboard" Storyboard="{StaticResource button3}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="label3">
            <BeginStoryboard x:Name="button4_BeginStoryboard" Storyboard="{StaticResource button4}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="label">
            <BeginStoryboard Storyboard="{StaticResource Storyboard1}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>

        <Rectangle x:Name="button_1" Height="30" Margin="72.891,0,0,142.815" Width="115" VerticalAlignment="Bottom" HorizontalAlignment="Left" RadiusY="7.302" RadiusX="7.302" Fill="#FF4A4A97">
